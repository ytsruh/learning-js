datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client" // or `prisma-client-js`
  output        = "generated"
  runtime       = "bun"
  binaryTargets = ["native", "debian-openssl-3.0.x"] // Native for local and debian for production
}

model User {
  id             String    @id @default(uuid())
  email          String    @unique
  password       String
  name           String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deletedAt      DateTime?
}
